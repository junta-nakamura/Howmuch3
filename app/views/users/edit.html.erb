<header class="header-3">
  <div class="header-inner">
    <div class="logo">
      <div class="howmuch-logo">How much</div>
    </div>
    <nav class="header-nav">
    <% if user_signed_in? %>
      <div class="header-btn">
        <%= link_to "新規投稿", new_portfolio_path, class:"button-pulse logout-btn" %>
        <%= link_to "チャット", rooms_path, class:"button-pulse index-btn" if @userRooms.present? %>
        <%= link_to "マイページ", user_path(current_user.id), class:"button-pulse mypage-btn" %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"button-pulse logout-btn" %>
      </div>
     <% end %>
      </div>  
    </nav>
  </div>
</header>


<div class="box-wrapper new-registration-box">
  <div class="box">
    <div class="box-inner">

      <%= form_with model: current_user, url: user_path(current_user.id), local: true do |f| %>
        
        <h2 class="profile-image">プロフィール画像</h2>
        <div class="icon-field">
          <%= f.file_field :user_image, class:"user-image" %>
        </div>

        <div class="box-user">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :nickname, maxlength:"20" %>
        </div>


        <div class="box-user">
          <%= f.label :姓 %><br />
          <%= f.text_field :last_name %>
        </div>

        <div class="box-user">
          <%= f.label :名 %><br />
          <%= f.text_field :first_name %>
        </div>

        <div class="box-user">
          <%= f.label :セイ %><br />
          <%= f.text_field :last_name_kana %>
        </div>

        <div class="box-user">
          <%= f.label :メイ %><br />
          <%= f.text_field :first_name_kana %>
        </div>

        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

        <div class="box-user">
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :introduction, class:"introduce-box" %>
        </div>

          <%= f.submit "更新", class:"hover-effect_slide new-registration-btn" %>
      <% end %>
    </div>
  </div>
</div>