<header class="header-3">
  <div class="header-inner">
    <div class="logo">
      <div class="howmuch-logo">How much</div>
    </div>
    <nav class="header-nav">
      <div class="header-btn">
          <%= link_to "投稿一覧", portfolios_path, class:"button-pulse index-btn" %>
          <%= link_to "チャット", rooms_path, class:"button-pulse index-btn" if @companyRooms.present? %>
          <%= link_to "ログアウト",  destroy_company_session_path, method: :delete, class:"button-pulse logout-btn" %>
      </div>
    </nav>
  </div>
</header>

<div class="company-icon-image">
  <%= image_tag @company.company_image.variant(resize_to_limit: [250, 250]), class:"company-icon" %>
</div>  

<div class="list6">
  <ul class="list6box">
    <li class="list">
      <i class="fas fa-home"></i>
      <p class="text"><%= @company.company_name %></p>
    </li>
    <li class="list">
      <i class="fas fa-folder"></i>
      <p class="text"><%= @company.postal_code %></p>
    </li>
    <li class="list">
      <i class="fas fa-folder"></i>
      <p class="text"><%= @company.prefecture.name %></p>
    </li>
    <li class="list">
      <i class="fas fa-folder"></i>
      <p class="text"><%= @company.municipalities %></p>
    </li>
    <li class="list">
      <i class="fas fa-folder"></i>
      <p class="text"><%= @company.house_number %></p>
    </li>
    <% if @company.building? %>
    <li class="list">
      <i class="fas fa-folder"></i>
      <p class="text"><%= @company.building %></p>
    </li>
    <% end %>
  </ul>
  <% if @company.id == current_company.id %>
    <div class="edit-btn-groups">
      <%= link_to "編集", edit_company_path(current_company.id), class:"edit-btn button-fill" %>
    </div> 
  <% end %>
</div>
