<div class="box-wrapper new-registration-box">
  <div class="box">
    <div class="box-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       
        <h2 class="profile-image">プロフィール画像</h2>
        <div class="icon-field">
          <%= f.file_field :company_image, class:"user-image" %>
        </div>

        <div id="image-list"></div>

        <div class="box-email">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="box-password">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="box-password">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="box-company">
          <%= f.label :企業名 %><br />
          <%= f.text_field :company_name %>
        </div>
      
        <div class="box-company">
          <%= f.label :電話番号（ハイフンなし） %><br />
          <%= f.text_field :company_phone %>
        </div>
      
        <div class="box-company">
          <%= f.label :郵便番号（ハイフンなし） %><br />
          <%= f.text_field :postal_code %>
        </div>
      
        <div class="box-company prefecture-box">
          <%= f.label :都道府県 %><br />
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {prompt: "---" }) %>
        </div>
      
        <div class="box-company">
          <%= f.label :市区町村 %><br />
          <%= f.text_field :municipalities %>
        </div>
      
        <div class="box-company">
          <%= f.label :番地 %><br />
          <%= f.text_field :house_number %>
        </div>
      
        <div class="box-company">
          <%= f.label :建物名 %><br />
          <%= f.text_field :building %>
        </div>

        <div class="box-login ">
          <div class="legal-text">
            続行することで、Howmuchの
            <%= link_to "利用規約", "#" %>
            および
            <%= link_to "プライバシー規約", "#" %>
            に同意するものとみなされます。
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember, "ログインしたままにする" %>
            </div>
          <%= f.submit "新規登録", class:"new-registration-btn" %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>