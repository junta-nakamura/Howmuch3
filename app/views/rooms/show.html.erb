<header class="header-3">
  <div class="header-inner">
    <div class="logo">
      <div class="howmuch-logo">How much</div>
    </div>
    <nav class="header-nav">
    <% if user_signed_in?  %>
      <div class="header-btn">
        <%= link_to "New portfolio", new_portfolio_path, class:"button-pulse logout-btn" %>
        <%= link_to "My page", user_path(current_user.id), class:"button-pulse mypage-btn" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"button-pulse logout-btn" %>
      </div>
    <% else company_signed_in? %>
      <div class="header-btn">  
        <%= link_to "All portfolios", portfolios_path, class:"button-pulse index-btn" %>
        <%= link_to "My page", company_path(current_company.id), class:"button-pulse mypage-btn" %>
        <%= link_to "Log out",  destroy_company_session_path, method: :delete, class:"button-pulse logout-btn" %>
        <%# 戻るボタンも必要 %>
      </div>
     <% end %>
      </div>  
    </nav>
  </div>
</header>


<%# <%= room_lists %>
<div class="message-wrapper">
  <div class="message">
     <div class="message-user">
       <%= @messages.companies.company_name %>
     </div>
     <div class="message-content">
       <%= @companyMessages.content %>
     </div>
     <div class="message-date">
       <%= @companyMessages.created_at %>
     </div>
    </div>
  </div>
</div>

<%= form_with model: @message, class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>